generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Campus {
  id        String    @id @default(cuid())
  name      String    @unique
  code      String    @unique
  address   String?
  phone     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  groups    Group[]
  students  Student[]
  users     User[]
}

model Group {
  id        String    @id @default(cuid())
  name      String
  level     String
  campusId  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  campus    Campus    @relation(fields: [campusId], references: [id], onDelete: Cascade)
  students  Student[]
  users     User[]

  @@unique([campusId, name])
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String
  campusId  String?
  groupId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  group     Group?   @relation(fields: [groupId], references: [id])
  campus    Campus?  @relation(fields: [campusId], references: [id])
}

model Student {
  id               String          @id @default(cuid())
  name             String
  lastName         String
  dateOfBirth      DateTime
  gender           String
  emergencyContact String
  emergencyPhone   String
  parentEmail      String
  parentPhone      String
  medicalNotes     String?
  campusId         String
  groupId          String
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  dailyReports     DailyReport[]
  group            Group           @relation(fields: [groupId], references: [id], onDelete: Cascade)
  campus           Campus          @relation(fields: [campusId], references: [id], onDelete: Cascade)
  weeklySummaries  WeeklySummary[]
}

model DailyReport {
  id                String    @id @default(cuid())
  studentId         String
  date              DateTime  @default(now())
  mood              String
  lunchIntake       String
  hadNap            Boolean   @default(false)
  usedBathroom      Boolean   @default(false)
  diaperChanged     Boolean   @default(false)
  diaperNotes       String?
  medicationGiven   Boolean   @default(false)
  medicationName    String?
  medicationNotes   String?
  dailyAchievements String?
  generalNotes      String?
  isComplete        Boolean   @default(false)
  sentViaEmail      Boolean   @default(false)
  sentViaWhatsApp   Boolean   @default(false)
  sentAt            DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  student           Student   @relation(fields: [studentId], references: [id])
}

model WeeklySummary {
  id              String    @id @default(cuid())
  studentId       String
  weekStart       DateTime
  weekEnd         DateTime
  behaviorSummary String
  aiSuggestions   String
  sentViaEmail    Boolean   @default(false)
  sentAt          DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  student         Student   @relation(fields: [studentId], references: [id])
}

model NotificationSettings {
  id               String   @id @default(cuid())
  enabled          Boolean  @default(true)
  method           String
  emailFrom        String?
  emailSubject     String?
  whatsappEnabled  Boolean  @default(false)
  whatsappTemplate String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Feedback {
  id        String   @id @default(cuid())
  userId    String?
  userName  String?
  userRole  String?
  content   String
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
